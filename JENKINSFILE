pipeline {
    agent any

     stages {
        stage('Get Code'){
            steps{
                checkout scm
            }
        }

        stage('Static') {
            steps {
                sh '''
                    export PYTHONPATH=$WORKSPACE
                    /home/jenkins/.local/bin/flake8 --exit-zero --format=pylint app > flake8.out
                    echo $?
                '''
                recordIssues qualityGates: [[integerThreshold: 8, threshold: 8.0, type: 'TOTAL'], [criticality: 'FAILURE', integerThreshold: 10, threshold: 10.0, type: 'TOTAL']], sourceCodeRetention: 'LAST_BUILD', tools: [flake8(pattern: 'flake8.out')]
            }
        }

        stage('Tests')
        {
            parallel
            {
                stage('Unit') {
                    steps {
                        catchError(buildResult: 'SUCCESS', stageResult: 'SUCCESS') {
                            sh '''
                                export PYTHONPATH=$WORKSPACE
                                /home/jenkins/.local/bin/coverage run --branch --source=app --omit=app/__init__.py,app/api.py -m pytest --junitxml=result-unit.xml test/unit
                            '''
                            junit 'result-unit.xml'
                        }
                    }
                }

                stage('Rest') {
                    steps {
                        catchError(buildResult: 'SUCCESS', stageResult: 'SUCCESS') {
                            sh '''
                                /home/jenkins/.local/bin/flask --app app/api.py run &
                                /usr/bin/curl -sf --retry 10 --retry-delay 1 --retry-connrefused http://localhost:5000

                                /opt/java/openjdk/bin/java -jar /home/jenkins/wiremock/wiremock-standalone-3.13.2.jar --port 9090 --root-dir test/wiremock &
                                /usr/bin/curl -sf --retry 10 --retry-delay 1 --retry-connrefused http://localhost:9090/__admin/health

                                export PYTHONPATH=${WORKSPACE}
                                /home/jenkins/.local/bin/pytest --junitxml=result-rest.xml test/rest
                            '''
                            junit 'result-rest.xml'
                        }
                    }
                }
            }
        }

        stage("Coverage") {
            steps {
                sh '''
                    /home/jenkins/.local/bin/coverage xml
                '''
                recordCoverage qualityGates: [[criticality: 'NOTE', integerThreshold: 95, metric: 'LINE', threshold: 95.0], [criticality: 'ERROR', integerThreshold: 85, metric: 'LINE', threshold: 85.0], [criticality: 'ERROR', integerThreshold: 80, metric: 'BRANCH', threshold: 80.0], [criticality: 'NOTE', integerThreshold: 90, metric: 'BRANCH', threshold: 90.0]], tools: [[parser: 'COBERTURA', pattern: 'coverage.xml']]
            }
        }

        stage("Security") {
            steps {
                sh '''
                   export PYTHONPATH=$WORKSPACE
                   /home/jenkins/.local/bin/bandit --exit-zero -r . -f custom -o bandit.out --msg-template "{abspath}:{line}: [{test_id}] {msg}"
                '''
                recordIssues tools: [pyLint(name: 'Bandit', pattern: 'bandit.out')], qualityGates: [[integerThreshold: 2, threshold: 2.0, type: 'TOTAL'], [criticality: 'FAILURE', integerThreshold: 4, threshold: 4.0, type: 'TOTAL']]
            }
        }

        //stage("Performance"){
        //    steps {
        //        sh '''
        //            export PYTHONPATH=$WORKSPACE
        //            export FLASK_APP=app/api.py
        //            flast run &
        //
        //            # 10 reintentos para comprobar que Flask est√° levantado
        //            for i in $(seq 1 10); do
        //              nc -z localhost 5000 && break
        //              echo "Waiting for Flask... try $i/10"
        //              sleep 1
        //            done || {
        //              echo "Flask not available"
        //              exit 1
        //            }
        //
        //            ~/apache-jmeter-5.6.3/bin/jmeter.sh -n -t test/jmeter/flask.jmx -f -l flask.jtl
        //        '''
        //        perfReport sourceDataFiles: 'flask.jtl'
        //    }
        //}
     }
}
