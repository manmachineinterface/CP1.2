def showAgentInformation() {
    sh '''
        whoami
        hostname
        echo ${WORKSPACE}
    '''
}

pipeline {
    agent none

    options {
        skipDefaultCheckout(true)
        timestamps()
    }

    stages {
        stage('Get Code') {
            agent {label 'agent1'}
            steps {
                showAgentInformation()
                git branch: 'master',
                    changelog: false,
                    poll: false,
                    url: 'https://github.com/manmachineinterface/CP1.2'
                stash name:'code', includes:'**'
            }

            post {
                cleanup {
                    cleanWs(deleteDirs: true, disableDeferredWipeout: true)
                }
            }
        }

        stage ('Tests') {
            parallel {
                stage('Unit, Coverage') {
                    agent {
                        node {
                            label 'agent1'
                            // workspace fijo para toda la rama
                            customWorkspace "unit-coverage"
                        }
                    }

                    stages {

                        stage('Unit') {
                            steps {
                                showAgentInformation()
                                unstash 'code'

                                catchError(buildResult: 'SUCCESS', stageResult: 'SUCCESS') {
                                    sh '''
                                        coverage run --branch --source=app \
                                          --omit=app/__init__.py,app/api.py \
                                          -m pytest --junitxml=result-unit.xml test/unit
                                        coverage xml
                                    '''
                                }

                                junit 'result-unit.xml'
                            }
                        }

                        stage('Coverage') {
                            steps {
                                showAgentInformation()

                                recordCoverage qualityGates: [
                                    [criticality: 'NOTE', integerThreshold: 95, metric: 'LINE', threshold: 95.0],
                                    [criticality: 'ERROR', integerThreshold: 85, metric: 'LINE', threshold: 85.0],
                                    [criticality: 'ERROR', integerThreshold: 80, metric: 'BRANCH', threshold: 80.0],
                                    [criticality: 'NOTE', integerThreshold: 90, metric: 'BRANCH', threshold: 90.0]
                                ],
                                tools: [[parser: 'COBERTURA', pattern: 'coverage.xml']]
                            }
                        }
                    }

                    post {
                        cleanup {
                            cleanWs(deleteDirs: true, disableDeferredWipeout: true)
                            script {
                                deleteDir()
                            }
                        }
                    }
                }
                stage('Rest') {
                    agent {label 'agent2'}
                    steps {
                        showAgentInformation()
                        catchError(buildResult: 'SUCCESS', stageResult: 'SUCCESS') {
                            unstash name:'code'
                            sh '''
                                flask --app app/api.py run &
                                FLASK_PID=$!
                                curl -sf --retry 10 --retry-delay 1 --retry-connrefused http://localhost:5000
                                java -jar /home/jenkins/wiremock/wiremock-standalone-3.13.2.jar --port 9090 --root-dir test/wiremock &
                                WIREMOCK_PID=$!
                                curl -sf --retry 10 --retry-delay 1 --retry-connrefused http://localhost:9090/__admin/health
                                pytest --junitxml=result-rest.xml test/rest
                                kill $FLASK_PID
                                kill $WIREMOCK_PID
                            '''
                        }
                        junit 'result-rest.xml'
                    }

                    post {
                        cleanup {
                            cleanWs(deleteDirs: true, disableDeferredWipeout: true)
                        }
                    }
                }

                stage('Static') {
                    agent {label 'agent3'}
                    steps {
                        showAgentInformation()
                        unstash name:'code'
                        sh '''
                            flake8 --exit-zero --format=pylint app > flake8.out
                        '''
                        recordIssues qualityGates: [
                            [integerThreshold: 8, threshold: 8.0, type: 'TOTAL'],
                            [criticality: 'FAILURE', integerThreshold: 10, threshold: 10.0, type: 'TOTAL']
                        ],
                        sourceCodeRetention: 'LAST_BUILD',
                        tools: [flake8(pattern: 'flake8.out')]
                    }

                    post {
                        cleanup {
                            cleanWs(deleteDirs: true, disableDeferredWipeout: true)
                        }
                    }
                }

                stage("Security") {
                    agent {label 'agent2'}
                    steps {
                        showAgentInformation()
                        unstash name:'code'
                        sh '''
                           bandit --exit-zero -r . -f custom -o bandit.out --msg-template "{abspath}:{line}: [{test_id}] {msg}"
                        '''
                        recordIssues tools: [
                            pyLint(name: 'Bandit', pattern: 'bandit.out')],
                        qualityGates: [
                            [integerThreshold: 2, threshold: 2.0, type: 'TOTAL'],
                            [criticality: 'FAILURE', integerThreshold: 4, threshold: 4.0, type: 'TOTAL']
                        ]
                    }

                    post {
                        cleanup {
                            cleanWs(deleteDirs: true, disableDeferredWipeout: true)
                        }
                    }
                }

                stage("Performance"){
                    agent {label 'agent3'}
                    steps {
                        showAgentInformation()
                        unstash name:'code'
                        sh '''
                            flask --app app/api.py run &
                            FLASK_PID=$!
                            curl -sf --retry 10 --retry-delay 1 --retry-connrefused http://localhost:5000
                            jmeter -n -t test/jmeter/flask.jtl -f -l flask_${BUILD_NUMBER}.jtl
                            kill $FLASK_PID
                        '''
                        perfReport sourceDataFiles: 'flask_${BUILD_NUMBER}.jtl', ignoreFailedBuilds: true
                    }

                    post {
                        cleanup {
                            cleanWs(deleteDirs: true, disableDeferredWipeout: true)
                        }
                    }
                }
            }
        }
    }
}
